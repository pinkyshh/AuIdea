<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/project_box_1"
        android:layout_width="355dp"
        android:layout_height="87dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_box"
        android:backgroundTint="#A483BD"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/project_box2"
        android:layout_width="355dp"
        android:layout_height="87dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_box"
        android:backgroundTint="#A483BD"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/project_box_1" />

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="261dp"
        android:fontFamily="@font/cabin_bold"
        android:text="Team Setup"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/project_box_1"
        app:layout_constraintStart_toStartOf="@+id/project_box_1"
        app:layout_constraintTop_toTopOf="@+id/project_box_1" />

    <TextView
        android:id="@+id/teamDes"
        android:layout_width="293dp"
        android:layout_height="48dp"
        android:fontFamily="@font/cabin_bold"
        android:text="Topics are listed after midterm exam. Yes, there is a deadline!"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/project_box_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration" />

    <TextView
        android:id="@+id/working"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="170dp"
        android:fontFamily="@font/cabin_bold"
        android:text="SP Matching Result"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/project_box2"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/project_box2" />

    <TextView
        android:id="@+id/teamDes2"
        android:layout_width="291dp"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cabin_bold"
        android:text="Check back to SPS for your matched topic."
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/project_box2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/working" />

</androidx.constraintlayout.widget.ConstraintLayout>